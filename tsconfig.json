{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "stores": ["packages/core/src"],
      "@/cli": ["cli"],
      "@/derivedStore/*": ["packages/core/src/derivedStore/*"],
      "@/env": ["packages/core/src/env"],
      "@/hooks/*": ["packages/core/src/hooks/*"],
      "@/logger": ["packages/core/src/logger"],
      "@/queryStore/*": ["packages/core/src/queryStore/*"],
      "@/storesStorage": ["packages/core/src/storesStorage"],
      "@/tests/*": ["packages/core/src/tests/*"],
      "@/utils/*": ["packages/core/src/utils/*"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
