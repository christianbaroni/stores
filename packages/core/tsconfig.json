{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["src/env.web.ts"],
      "@storesStorage": ["src/storesStorage.web.ts"]
    }
  },
  "include": ["src/**/*", "tsup.config.ts", "analyze-bundle.ts"]
}
