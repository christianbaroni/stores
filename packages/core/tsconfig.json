{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/cli": ["../../cli"],
      "@/env": ["src/env.web.ts"],
      "@/storage": ["src/storesStorage.web.ts"]
    }
  },
  "include": ["src/**/*", "build/**/*", "scripts/**/*", "tsup.config.ts"],
  "references": [{ "path": "../../cli" }]
}
